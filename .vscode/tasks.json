{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "g++",
        "type": "shell",
        "command": "g++",
        "args":[
            "-g", "${file}", "-o", "./0.out"
        ],
        "presentation": {
          "echo": false,
          "reveal": "silent",
          "focus": false,
          "panel": "dedicated",
          "showReuseMessage": false,
          "clear": true
        },
        "group":{
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }